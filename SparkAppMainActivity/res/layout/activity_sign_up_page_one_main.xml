<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SignUpPageOneMainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/signup_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="@string/next_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lines="2"
        android:text="@string/signup_desc_text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textSize="22sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="7dp" >

            <View
                android:id="@+id/textView4"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#007a3e0a" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView4"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/icon_people"
                android:ems="10"
                android:hint="First name"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/space_icon"
                android:ems="10"
                android:hint="Last name"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText1"
                android:layout_below="@+id/editText1"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/nric_icon"
                android:ems="10"
                android:hint="NRIC/FIN"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText3"
                android:layout_below="@+id/editText3"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/png_icon"
                android:ems="10"
                android:hint="Email address"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editText4"
                android:layout_marginTop="2dp"
                android:layout_toLeftOf="@+id/textView4"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/password_icon"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:lines="1"
                android:password="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="20sp" >
            </EditText>

            <View
                android:id="@+id/View01"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText2"
                android:layout_below="@+id/editText4"
                android:background="#007a3e0a" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/editText5"
                android:layout_toRightOf="@+id/textView4"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/space_icon"
                android:ems="10"
                android:hint="Confirm"
                android:inputType="textPassword"
                android:lines="1"
                android:password="true"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText5"
                android:layout_below="@+id/editText5"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/date_icon"
                android:ems="10"
                android:focusable="false"
                android:hint="Date of birth"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText5"
                android:layout_below="@+id/editText7"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/gender_icon"
                android:ems="10"
                android:focusable="false"
                android:hint="Gender"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText5"
                android:layout_below="@+id/editText8"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/phone_icon"
                android:ems="10"
                android:hint="Phone number"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:lines="1"
                android:textColorHint="#ffffff" />

            <EditText
                android:id="@+id/editText10"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText5"
                android:layout_below="@+id/editText9"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/service_icon"
                android:ems="10"
                android:focusable="false"
                android:hint="Service"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editText11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/editText5"
                android:layout_below="@+id/editText10"
                android:layout_marginTop="2dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/occupied_icon"
                android:ems="10"
                android:focusable="false"
                android:hint="Occupation"
                android:inputType="textCapCharacters"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText3"
                android:layout_alignRight="@+id/editText3"
                android:layout_marginBottom="5dp"
                android:src="@drawable/info_icon"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editText9"
                android:layout_alignRight="@+id/editText9"
                android:layout_marginBottom="5dp"
                android:src="@drawable/info_icon" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>